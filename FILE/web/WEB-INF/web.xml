<?xml version="1.0" encoding="UTF-8"?>
<web-app version="6.0" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd">
    <filter>
        <filter-name>homefiter</filter-name>
        <filter-class>fitele.homefiter</filter-class>
    </filter>
    <filter>
        <filter-name>Loginfiter</filter-name>
        <filter-class>fitele.Loginfiter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>Loginfiter</filter-name>
        <url-pattern>/add.jsp</url-pattern>
        <url-pattern>/add</url-pattern>
        <url-pattern>/delete</url-pattern>
        <url-pattern>/update</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>homefiter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>NewServlet</servlet-name>
        <servlet-class>controller.NewServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Logincontroller</servlet-name>
        <servlet-class>controller.Logincontroller</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddController</servlet-name>
        <servlet-class>controller.AddController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>NewServlet</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Logincontroller</servlet-name>
        <url-pattern>/login</url-pattern>
        <init-param>
<!--            <param-name>username</param-name>
              <param-value>sonnt</param-value>
              <param-name>password</param-name>
              <param-value>123</param-value>-->
        </init-param>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddController</servlet-name>
        <url-pattern>/add</url-pattern>
    </servlet-mapping>
</web-app>
